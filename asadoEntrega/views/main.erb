    <link href="https://maxcdn.bootstrapcdn.com/bootstrap/3.3.7/css/bootstrap.min.css" rel="stylesheet" integrity="sha384-BVYiiSIFeK1dGmJRAkycuHAHRg32OmUcww7on3RYdg4Va+PmSTsz/K68vbdEjh4u" crossorigin="anonymous">

    <div class="main-wrapper contenedorGeneral">

      <div class="section col-xs-10 contenedorWhite">
        <div class="section col-6 container-fluid rounded">
          <div class="card text-center">
            <div class="card-header">
              CUENTAS PARA EL ASADO
            </div>
            <div class="card-body">
              
                
                <div class="col-8 mx-auto">

                    <div class="row text-center">
                    <div class="col-8 mx-auto">

                    <h5 class="card-title">Cada Uno Paga</h5>
                    <table border=0 class="table mx-auto" >
                      
                      <thead class="thead-inverse ligth">
                      <tr>                     
                        <th class="text-center"><span class="glyphicon glyphicon-piggy-bank" aria-hidden="true"></span></th>                                             
                      </tr>
                      </thead>
                      <tr> 
                            <td class="number data-number-to-fixed="2" data-number-stepfactor="100" class="currency" value="0.00" step="0.01" >
                              <p>$ <%= @resumenAsado.first["cadaUnoPone"]%></p>
                            </td>  
                      </tr>                      
                    </table>

                    <h5 class="card-title">Entre Todos Gastamos</h5>
                    <table border=0 class="table mx-auto" >
                      <thead class="thead-inverse ligth">
                      <tr>
                        <th class="text-center"><span class="glyphicon glyphicon-user" aria-hidden="true"></span></th>
                        
                        <th class="text-center"><span class="glyphicon glyphicon-shopping-cart" aria-hidden="true"></span></th>                                             
                      </tr>
                      </thead>
                      <tr> 
                            <td class="number" value="0.00">
                              <p><%= @resumenAsado.first["cantidadAsistentes"]  %></p>
                            </td>
                            <td class="number" value="0.00">
                              <p>$ <%= @resumenAsado.first["sumaTotal"]  %></p>
                            </td>  
                      </tr>                      
                    </table>

                    <form method="post" action="/borrar" class="mx-auto">            
                <button class="btn btn-default mx-auto text-center input-sm" type='submit'>
                  <p class="mx-auto text-center"><span class="glyphicon glyphicon-refresh" aria-hidden="true"></span>
                    Borrar
                  </p>
                </button>
              </form>

</div>


            </div>
                    </div>
                  </div>




                  
                
                      
            
                              
              

              

            </div>

          </div>
 


        <div class="col-12 container-fluid rounded section">
          <div class="row container-fluid">
            <div class="col-6 container-fluid rounded">
              <div class="card text-center">
                <div class="card-header">
                  ASISTENTES
                </div>

                <div class="card-body">
                  <form method="post" action="/nuevoAsistente" class="form-group row">
                    <div class="col-6">          
                      <input class="form-control input-sm" type="text" name="nuevoAsistente" placeholder=" Nuevo Asistente" required>
                    </div>
                    <div class="col-4"> 
                      <input class='btn btn-primary form-control input-sm' type='submit' value='Agregar'>
                    </div>
                  </form>

                  <table border=0 class="table center-block col-8 mx-auto" ng-controller="tableController">
                    <thead class="thead-inverse ligth">
                      <tr>
                        <th>Asistentes</th>
                        <th>Aporto</th> 
                        <th>Debe</th>
                        <th>Le Deben</th> 
                      </tr>

                      </thead>

                      <tr>
                        
                        <% @detallePorAsistente.each do |p|  %>
                          <tr>
                            <td ><%= p["nombre"]  %></td>
                            <td class="number" value="0.00"><%= p["APORTO"]  %></td>
                            <td class="number" value="0.00"><%= p["DEBE"]  %></td> 
                            <td class="number" value="0.00"><%= p["LE DEBEN"]  %></td>            
                          </tr>  
                        <% end %>
                      </tr>
                    </table>   
                </div>
              </div>
            </div>

            <div class="col-6 container-fluid rounded">
              <div class="card text-center"> 
                <div class="card text-center">
                  <div class="card-header">
                    COMPRAS
                  </div>  
                  <div class="card-body">

         <form method="post" action="/nuevoGasto" class="form-group">
          
          <select class="form-control col-8 mx-auto row input-sm" name="id_asistente" required>
            <option value="" hidden selected disabled>Quién compró?</option>
            <% @asistentes.each do |p|  %>
                <option value="<%= p["id_asistente"]  %>"><%= p["nombre"]  %></option>
            <% end %>
          </select>
          <br>  
          
          <div class="row">
          <div class="col-10 mx-auto">
              <div class="row"> 
            <input class="form-control input-sm col-6 mx-auto" type="text" name="concepto" placeholder="Qué Compró"  required> 
              
            
            <input class="form-control input-sm col-4 mx-auto" type="number" step="0.01" name="cantidad" placeholder="Importe" required> 
            </div>  
          </div>
          </div>
          <br>
          <input class='btn btn-primary form-control input-sm col-8 mx-auto row input-sm' type='submit' value='Agregar Gasto'>
        
          </form>

                    <div class="row">
                    <div class=" col-8 mx-auto">
                    <table border=0 class="table table-responsive" >
                    <thead class="thead-inverse ligth">
                      <tr>
                        <th>Quien compró?</th>
                        <th>Concepto</th>
                        <th>Monto</th>                        
                      </tr>
                      </thead>
                      <tr>
                        
                        <% @detalleGasto.each do |p|  %>
                          <tr>
                            <td ><%= p["nombre"]%></td>
                            <td class="number" value="0.00"><%= p["concepto"]  %></td>
                            <td class="number" value="0.00"><%= p["cantidad"]  %></td>          
                          </tr>  
                        <% end %>
                      </tr>
                    </table> 
                    </div>
                  </div>

          </div>
          


  
                





                  </div>              
                </div>               
              </div>
            </div>
          </div>
        </div>







      </div>
    </div>




